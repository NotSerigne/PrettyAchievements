{
  "steam_api": {
    "api_key": "YOUR_STEAM_API_KEY",
    "default_language": "fr",
    "max_retries": 3,
    "timeout": 10
  },
  "achievements": {
    "fallback_beautify": true,
    "show_hidden": true,
    "sort_by_percentage": true,
    "min_percentage_display": 0.1
  },
  "debug": {
    "verbose_mode": false,
    "show_api_calls": false,
    "log_errors": false
  },
  "paths": {
    "cache_dir": "./cache",
    "output_dir": "./output"
  }
}
